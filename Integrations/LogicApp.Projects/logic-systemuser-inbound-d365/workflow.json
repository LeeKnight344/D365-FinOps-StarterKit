                                        "mserp_externaluser",
                                        "mserp_userinfo_language",
                                        "mserp_helplanguage",
                                        "mserp_preferredtimezone",
                                        "mserp_preferredcalendar",
                                        "mserp_homepagerefreshduration",
                                        "mserp_globallistpagelinkmode",
                                        "mserp_globalexcelexportmode",
                                        "mserp_userinfo_defaultpartition",
                                        "mserp_globalexcelexportfilepath",
                                        "mserp_preferredlocale",
