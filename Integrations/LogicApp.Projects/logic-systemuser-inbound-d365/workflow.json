                                            ]
                                        },
                                        "mserp_workflowlineitemnotificationformat": {
                                            "type": [
                                                "integer",
                                                "null"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "mserp_defaultcountryregion",
                                        "mserp_documenthandlingactive",
                                        "mserp_showattachmentstatus",
                                        "mserp_email",
                                        "mserp_sendalertasemailmessage",
                                        "mserp_eventpollfrequency",
                                        "mserp_eventpopupdisplaywhen",
                                        "mserp_eventpopuplinkdestination",
                                        "mserp_eventpopups",
                                        "mserp_eventworkflowshowpopup",
                                        "mserp_shownotificationsinthemicrosoftdynamicsax7client",
                                        "mserp_sendnotificationsinemail",
                                        "mserp_markemptylinks",
                                        "mserp_userid",
                                        "mserp_language",
                                        "mserp_sqmenabled",
                                        "mserp_sqmguid",
                                        "mserp_workflowlineitemnotificationformat",
                                        "mserp_theme",
