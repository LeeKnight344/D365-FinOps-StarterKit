                                        },
                                        "mserp_preferredcalendar": {
                                            "type": [
                                                "integer",
                                                "null"
                                            ]
                                        },
                                        "mserp_preferredlocale": {
                                            "type": [
                                                "string",
                                                "null"
                                            ]
                                        },
                                        "mserp_preferredtimezone": {
                                            "type": [
                                                "integer",
                                                "null"
                                            ]
                                        },
                                        "mserp_sendalertasemailmessage": {
                                            "type": [
                                                "integer",
                                                "null"
                                            ]
                                        },
                                        "mserp_sendnotificationsinemail": {
                                            "type": [
