                                    ],
                                    "type": "object"
                                },
                                "type": "array"
                            }
                        },
                        "type": "object"
                    }
                },
                "runAfter": {
                    "Find_Matching_Dataverse_Record": [
                        "SUCCEEDED"
                    ]
                },
                "type": "ParseJson"
            },
            "Switch": {
                "cases": {
                    "Create_Record": {
                        "actions": {
                            "Create_Dataverse_Record": {
                                "inputs": {
                                    "body": {
                                        "mserp_accounttype": 200000002,
                                        "mserp_alias": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Email']}",
                                        "mserp_company": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['LegalEntity']}",
                                        "mserp_emailproviderid": "",
                                        "mserp_enabled": "@json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Enabled']",
                                        "mserp_helplanguage": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Language']}",
                                        "mserp_networkdomain": "https://sts.windows.net/",
                                        "mserp_userid": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['UserID']}",
                                        "mserp_userinfo_language": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Language']}",
                                        "mserp_username": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['UserDisplayName']}"
                                    },
                                    "headers": {
                                        "Authorization": "Bearer @{body('Parse_Bearer_Token')?['access_token']}",
                                        "Content-Type": "application/json; charset=utf-8",
                                        "OData-MaxVersion": "4.0",
                                        "OData-Version": "4.0"
                                    },
                                    "method": "POST",
                                    "uri": "@{parameters('AZ_APIS_Dataverse_URL')}api/data/v9.1/mserp_systemuserentities"
                                },
                                "runtimeConfiguration": {
                                    "contentTransfer": {
                                        "transferMode": "Chunked"
                                    }
                                },
                                "type": "Http"
                            },
                            "Terminate_-_Record_Created": {
                                "inputs": {
                                    "runStatus": "Succeeded"
                                },
                                "runAfter": {
                                    "Create_Dataverse_Record": [
                                        "SUCCEEDED"
                                    ]
                                },
                                "type": "Terminate"
                            }
                        },
                        "case": "Create"
                    },
                    "Delete_Record": {
                        "actions": {
                            "For_each_-_Delete": {
                                "actions": {
                                    "Delete_Dataverse_Record": {
                                        "inputs": {
                                            "headers": {
                                                "Authorization": "Bearer @{body('Parse_Bearer_Token')?['access_token']}",
                                                "Content-Type": "application/json",
                                                "OData-MaxVersion": "4.0",
                                                "OData-Version": "4.0"
                                            },
                                            "method": "DELETE",
                                            "uri": "@{parameters('AZ_APIS_Dataverse_URL')}api/data/v9.1/mserp_systemuserentities(@{item()?['mserp_systemuserentityid']})"
                                        },
                                        "runtimeConfiguration": {
                                            "contentTransfer": {
                                                "transferMode": "Chunked"
                                            }
                                        },
                                        "type": "Http"
                                    }
                                },
                                "foreach": "@outputs('Parse_JSON')?['body']?['value']",
                                "type": "foreach"
                            },
                            "Terminate_-_Record_Deleted": {
                                "inputs": {
                                    "runStatus": "Succeeded"
                                },
                                "runAfter": {
                                    "For_each_-_Delete": [
                                        "SUCCEEDED"
                                    ]
                                },
                                "type": "Terminate"
                            }
                        },
                        "case": "Delete"
                    },
                    "Update_Record": {
                        "actions": {
                            "For_each_-_Update": {
                                "actions": {
                                    "Patch_Dataverse_Record": {
                                        "inputs": {
                                            "body": {
                                                "mserp_alias": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Email']}",
                                                "mserp_company": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['LegalEntity']}",
                                                "mserp_enabled": "@json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Enabled']",
                                                "mserp_userinfo_language": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['Language']}",
                                                "mserp_username": "@{json(xml(triggerBody()?['contentData']))['SystemUserBroadcast']['UserDisplayName']}"
                                            },
                                            "headers": {
                                                "Authorization": "Bearer @{body('Parse_Bearer_Token')?['access_token']}",
                                                "Content-Type": "application/json",
                                                "If-Match": "*",
                                                "OData-MaxVersion": "4.0",
                                                "OData-Version": "4.0",
                                                "Prefer": "return=representation"
                                            },
                                            "method": "PATCH",
                                            "uri": "@{parameters('AZ_APIS_Dataverse_URL')}api/data/v9.1/mserp_systemuserentities(@{item()?['mserp_systemuserentityid']})"
                                        },
                                        "runtimeConfiguration": {
                                            "contentTransfer": {
                                                "transferMode": "Chunked"
                                            }
                                        },
                                        "type": "Http"
                                    }
                                },
                                "foreach": "@outputs('Parse_JSON')?['body']?['value']",
                                "type": "foreach"
                            },
                            "Terminate_-_Record_Updated": {
                                "inputs": {
                                    "runStatus": "Succeeded"
                                },
                                "runAfter": {
                                    "For_each_-_Update": [
                                        "SUCCEEDED"
                                    ]
                                },
                                "type": "Terminate"
                            }
                        },
                        "case": "Update"
                    }
                },
                "default": {
                    "actions": {}
                },
                "expression": "@variables('Broadcast Type')",
                "runAfter": {
                    "Parse_JSON": [
                        "SUCCEEDED"
                    ]
                },
                "type": "Switch"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "triggers": {
            "When_messages_are_available_in_a_topic": {
                "inputs": {
                    "parameters": {
                        "isSessionsEnabled": false,
                        "subscriptionName": "sbs-systemusers",
                        "topicName": "sbt-integration-d365-inbound"
                    },
                    "serviceProviderConfiguration": {
                        "connectionName": "serviceBus",
                        "operationId": "receiveTopicMessages",
                        "serviceProviderId": "/serviceProviders/serviceBus"
                    }
                },
                "splitOn": "@triggerOutputs()?['body']",
                "type": "ServiceProvider"
            }
        }
    },
    "kind": "Stateful"
}